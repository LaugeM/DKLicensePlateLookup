<Window
    x:Class="DKLicensePlateLookup.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DKLicensePlateLookup.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBox
            x:Name="RegNumberTextBox"
            Grid.Row="1"
            Grid.Column="1"
            Width="240"
            Height="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="{Binding InputRegNumber, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap" />
        <Label
            x:Name="RegNumberLabel"
            Grid.Row="1"
            Height="28"
            Margin="112,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="Registreringsnummer" />
        <Button
            x:Name="SearchButton"
            Grid.Row="1"
            Grid.Column="2"
            Width="150"
            Height="20"
            Margin="0,13,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Command="{Binding Path=LookupRegistrationCommand, UpdateSourceTrigger=PropertyChanged}"
            CommandParameter="{Binding}"
            Content="Søg" />
        <Label
            x:Name="VINResultLabel"
            Grid.Row="3"
            Grid.Column="1"
            Width="240"
            Height="30"
            Margin="0,5,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            BorderBrush="Black"
            BorderThickness="1"
            Content="{Binding CurrentVehicle.VIN, UpdateSourceTrigger=PropertyChanged}" />
        <Label
            x:Name="BrandResultLabel"
            Grid.Row="4"
            Grid.Column="1"
            Width="240"
            Height="30"
            Margin="0,5,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            BorderBrush="Black"
            BorderThickness="1"
            Content="{Binding CurrentVehicle.Make, UpdateSourceTrigger=PropertyChanged}" />
        <Label
            x:Name="ModelResultLabel"
            Grid.Row="5"
            Grid.Column="1"
            Width="240"
            Height="30"
            Margin="0,5,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            BorderBrush="Black"
            BorderThickness="1"
            Content="{Binding CurrentVehicle.Model, UpdateSourceTrigger=PropertyChanged}" />
        <Label
            x:Name="UseResultLabel"
            Grid.Row="6"
            Grid.Column="1"
            Width="240"
            Height="30"
            Margin="0,5,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            BorderBrush="Black"
            BorderThickness="1"
            Content="{Binding CurrentVehicle.TypeUse, UpdateSourceTrigger=PropertyChanged}" />
        <Label
            x:Name="FirstRegResultLabel"
            Grid.Row="7"
            Grid.Column="1"
            Width="240"
            Height="30"
            Margin="0,5,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            BorderBrush="Black"
            BorderThickness="1"
            Content="{Binding CurrentVehicle.FirstReg, UpdateSourceTrigger=PropertyChanged}" />
        <Label
            x:Name="InsuranceResultLabel"
            Grid.Row="8"
            Grid.Column="1"
            Width="240"
            Height="30"
            Margin="0,5,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            BorderBrush="Black"
            BorderThickness="1"
            Content="{Binding CurrentVehicle.Insurance, UpdateSourceTrigger=PropertyChanged}" />
        <Button
            x:Name="CheckInsuranceButton"
            Grid.Row="8"
            Grid.Column="2"
            Width="150"
            Height="20"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Tjek forsikringsselskab" />
        <Label
            x:Name="VINLabel"
            Grid.Row="3"
            Margin="119,5,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Stelnummer" />
        <Label
            x:Name="BrandLabel"
            Grid.Row="4"
            Margin="119,5,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Mærke" />
        <Label
            x:Name="ModelLabel"
            Grid.Row="5"
            Margin="119,5,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Model &amp; variant" />
        <Label
            x:Name="UseLabel"
            Grid.Row="6"
            Margin="119,5,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Art &amp; anvendelse" />
        <Label
            x:Name="FirstRegLabel"
            Grid.Row="7"
            Margin="119,5,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="1. registreringsdato" />
        <Label
            x:Name="InsuranceLabel"
            Grid.Row="8"
            Margin="119,5,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Forsikringsselskab" />


    </Grid>
</Window>
